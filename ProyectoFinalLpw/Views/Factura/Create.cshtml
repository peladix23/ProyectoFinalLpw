
@{
    ViewBag.Title = "Crear Factura";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <h2>crear factura</h2>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-title">
                <h3>Ingrese los datos de la factura</h3>
            </div>
            <div class="ibox-content">
                <form method="post" action="/Factura/Create">
                    <div class="form-group row">
                        <label class="col-2 text-right">Total Venta:</label>
                        <div class="col-10">
                            <input type="text" name="Total_Venta" id="Total_Venta" class="form-control" />
                        </div>
                    </div>
  
                   <div class="form-group row">
                        <label class="col-2 text-right">Fecha:</label>
                        <div class="col-10">
                            <input type="date" name="fecha" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-2 text-right">Descripcion:</label>
                        <div class="col-10">
                            <input type="text" name="descripcion" class="form-control" />
                        </div>
                    </div>

                    <div class="text-center">
                        <input type="submit" value="Guardar" id="guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    $('#guardar').click(function (e) {
        if ($('#Total_Venta').val().trim() == '') {
            alert('Ingrese venta total');
            e.preventDefault();
        }
    });
</script>
