@model IEnumerable<ProyectoFinalLpw.Models.Facturas>
@{
    ViewBag.Title = "Index";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <h2>Gestionar Facturas</h2>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-title">
                <h2>Lista de Facturas</h2>
            </div>
            <div class="ibox-content">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                        
                            <th>Total Venta</th>
                            <th>Fecha</th>
                            <th>Descripción</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                          
                            <td>@item.Total_Venta</td>
                            <td>@item.Fecha</td>
                            <td>@item.Descripcion</td>
                            <td>
                                <button class="btn btn-warning" data-toggle="modal"
                                        data-url="@Url.Action("Edit","Factura",new { id = item.Id})">
                                    Editar
                                </button>
                                <input type="button" class="btn btn-danger" data-toggle="modal"
                                       data-url="@Url.Action("Delete","Factura", new { id = item.Id})" value="Eliminar" />
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalEdit">
    <!-- EN ESTA PARTE SE CARGARÁ LA VISTA PARCIAL-->
</div>
<div class="modal fade" id="modalDelete">
    <!-- EN ESTA PARTE SE CARGARÁ LA VISTA PARCIAL DEL ELIMINAR-->
</div>
<script>
    //# accedo a los elementos por id,
    //. accede a los elementos por la clase
    $('.btn-warning').click(function () {
        let url = $(this).data('url');//se obtiene la url a la cual acceder y se accina a la variable url
        //get /Marca/Edit/1
        $.get(url, function (data) {
            $('#modalEdit').html(data);
            $('#modalEdit').modal('show');
        });
    });
    //se accede a la clase del botón Eliminar
    $('.btn-danger').click(function () {
        let url = $(this).data('url');
        $.get(url, function (data) {
            $('#modalDelete').html(data);
            $('#modalDelete').modal('show');
        });
    });

</script>
