
@{
    ViewBag.Title = "Crear Factura";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <h2>crear Productos</h2>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-title">
                <h3>Ingrese los datos de Productos</h3>
            </div>
            <div class="ibox-content">
                <form method="post" action="/Producos/Create">
                    <div class="form-group row">
                        <label class="col-2 text-right">Nombre:</label>
                        <div class="col-10">
                            <input type="text" name="Nombre" id="Nombre" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-2 text-right">Marca:</label>
                        <div class="col-10">
                            <input type="date" name="Marca" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-2 text-right">Precio:</label>
                        <div class="col-10">
                            <input type="text" name="Precio" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-2 text-right">Stock:</label>
                        <div class="col-10">
                            <input type="text" name="Stock" class="form-control" />
                        </div>
                    </div>

                    <div class="text-center">
                        <input type="submit" value="Guardar" id="guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    $('#guardar').click(function (e) {
        if ($('#Nombre').val().trim() == '') {
            alert('Ingrese nombre');
            e.preventDefault();
        }
    });
</script>

